# Copy to .env and adjust values for local or production
# SQLite example (local)
# DATABASE_URL="file:./dev.db"
JWT_SECRET="dev-secret-change-me"
PORT=3000
# Allow localhost in development
CORS_ALLOWED_ORIGINS=

# Postgres example (Neon)
# DATABASE_URL="postgresql://user:pass@host/db?sslmode=require"
# CORS_ALLOWED_ORIGINS="https://your-site.netlify.app,https://yourdomain.com"

# Database (PostgreSQL)
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/turnex?schema=public

# Auth
JWT_SECRET=change-me
ACCESS_TOKEN_TTL=15m
REFRESH_TOKEN_TTL=7d

# CORS
FRONTEND_ORIGIN=http://127.0.0.1:5500
CORS_ALLOWED_ORIGINS=http://127.0.0.1:5500,http://localhost:5500,https://euge-90.github.io,https://euge-90.github.io/turnex

# Security / Rate limit
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX=100

# Observability
SENTRY_DSN=

# Seed flag (run seed only if true)
SEED=false
