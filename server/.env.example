# Prisma database connection
# Replace with your own connection string if using cloud DB
# Example: postgresql://USER:PASSWORD@HOST:PORT/DATABASE?sslmode=require
DATABASE_URL=postgresql://user:password@localhost:5432/turnex?schema=public

# Shadow database for Prisma migrations (optional, only needed for development)
SHADOW_DATABASE_URL=postgresql://user:password@localhost:5432/turnex_shadow?schema=public

# App secrets
# Generate a strong secret: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# CORS origins (comma-separated)
# Add your frontend URL here (e.g., https://yourusername.github.io)
# For GitHub Pages: https://euge-90.github.io y https://euge-90.github.io/turnex
CORS_ALLOWED_ORIGINS=http://localhost:5500,http://127.0.0.1:5500,http://localhost:3000,https://euge-90.github.io,https://euge-90.github.io/turnex

# Server port (optional, defaults to 3000)
PORT=3000

# Node environment
NODE_ENV=development
